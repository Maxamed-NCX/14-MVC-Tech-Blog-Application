<div class="card mb-6">
  <header class="card-header card-header-title has-background-info-dark">
    
        <div class="column">
            <p class=" has-text-primary-light"></p>
      <a href="/post/{{id}}"  class="has-text-white is-capitalized is-pulled-left">{{title}} </a></p>
      </div>

      <div class="column">
      <span class=""> </span>
      </div>
    
  </header>

    <div class="card-content">
        <div class="content has-text-justified">
            {{post_content}}
        </div>
            <div class="is-pulled-left">
                <b>{{user.username}}</b> |
                {{format_date created_at}} 
            </div>
            <div class="is-pulled-right"> 
                <a href="https://twitter.com/{{user.twitter}}"><i class="fab fa-twitter"></i></a> 
                <a href="https://github.com/{{user.github}}"><i class="fab fa-github"></i></a>
                <a href="https://facebook.com/{{user.facebook}}"><i class="fab fa-facebook"></i></a>
                <a href="https://instagram.com/{{user.instagram}}"><i class="fab fa-instagram"></i></a>
                 | <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
            </div>
          
        
    </div>
